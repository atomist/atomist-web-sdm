{
  "spec": {
    "template": {
      "spec": {
        "containers": [
          {
            "env": [
              {
                "name": "ATOMIST_CONFIG_PATH",
                "value": "/opt/atm/client.config.json"
              },
              {
                "name": "ATOMIST_GOAL_SCHEDULER",
                "value": "kubernetes"
              },
              {
                "name": "ATOMIST_POD_NAMESPACE",
                "valueFrom": {
                  "fieldRef": {
                    "fieldPath": "metadata.namespace"
                  }
                }
              },
              {
                "name": "FORCE_COLOR",
                "value": "1"
              },
              {
                "name": "GOOGLE_APPLICATION_CREDENTIALS",
                "value": "/opt/gcs/credentials.json"
              },
              {
                "name": "TMPDIR",
                "value": "/tmp"
              }
            ],
            "livenessProbe": {
              "httpGet": {
                "path": "/health"
              },
              "initialDelaySeconds": 20
            },
            "readinessProbe": {
              "httpGet": {
                "path": "/health"
              },
              "initialDelaySeconds": 20
            },
            "resources": {
              "limits": {
                "cpu": "1000m",
                "memory": "512Mi"
              },
              "requests": {
                "cpu": "100m",
                "memory": "384Mi"
              }
            },
            "securityContext": {
              "allowPrivilegeEscalation": false,
              "privileged": false,
              "readOnlyRootFilesystem": true
            },
            "volumeMounts": [
              {
                "mountPath": "/home/atomist",
                "name": "home"
              },
              {
                "mountPath": "/opt/atm",
                "name": "atomist-web-sdm",
                "readOnly": true
              },
              {
                "mountPath": "/opt/gcs",
                "name": "gcs-credentials",
                "readOnly": true
              },
              {
                "mountPath": "/tmp",
                "name": "tmp"
              }
            ]
          }
        ],
        "initContainers": [
          {
            "args": [
              "git config --global user.email 'bot@atomist.com' && git config --global user.name 'Atomist Bot'"
            ],
            "command": ["/bin/sh", "-c"],
            "image": "atomist/sdm-base:0.3.0",
            "name": "home",
            "securityContext": {
              "allowPrivilegeEscalation": false,
              "privileged": false,
              "readOnlyRootFilesystem": true
            },
            "volumeMounts": [
              {
                "mountPath": "/home/atomist",
                "name": "home"
              }
            ]
          }
        ],
        "securityContext": {
          "fsGroup": 2866,
          "runAsGroup": 2866,
          "runAsNonRoot": true,
          "runAsUser": 2866,
          "supplementalGroups": [],
          "sysctls": []
        },
        "serviceAccountName": "atomist-web-sdm",
        "volumes": [
          {
            "name": "atomist-web-sdm",
            "secret": {
              "defaultMode": 288,
              "secretName": "atomist-web-sdm"
            }
          },
          {
            "name": "gcs-credentials",
            "secret": {
              "defaultMode": 288,
              "secretName": "gcs-credentials"
            }
          },
          {
            "emptyDir": {},
            "name": "home"
          },
          {
            "emptyDir": {},
            "name": "tmp"
          }
        ]
      }
    }
  }
}
